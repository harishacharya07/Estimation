<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:rowCount="5"
        android:columnCount="6"
        >
        <Button
            android:id="@+id/cut"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:text="C"
            android:textSize="25dp"
            android:textColor="#000000"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_columnWeight="1">

        </Button>

        <Button
            android:id="@+id/brc"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:text="()"
            android:textSize="25dp"
            android:textColor="#000000"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_columnWeight="1">

        </Button>

        <Button
            android:id="@+id/mod"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:text="%"
            android:textSize="25dp"
            android:textColor="#000000"
            android:layout_row="0"
            android:layout_column="2"
            android:layout_columnWeight="1">

        </Button>

        <Button
            android:id="@+id/div"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:text="/"
            android:textSize="25dp"
            android:textColor="#000000"
            android:layout_row="0"
            android:layout_column="3"
            android:layout_columnWeight="1">

        </Button>

        <Button
            android:id="@+id/sev"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:text="7"
            android:textSize="25dp"
            android:textColor="#000000"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_columnWeight="1">

        </Button>

        <Button
            android:id="@+id/eigh"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:text="8"
            android:textSize="25dp"
            android:textColor="#000000"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_columnWeight="1">

        </Button>

        <Button
            android:id="@+id/nigh"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:text="9"
            android:textSize="25dp"
            android:textColor="#000000"
            android:layout_row="1"
            android:layout_column="2"
            android:layout_columnWeight="1">

        </Button>

        <Button
            android:id="@+id/mul"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:text="*"
            android:textSize="25dp"
            android:textColor="#000000"
            android:layout_row="1"
            android:layout_column="3"
            android:layout_columnWeight="1">

        </Button>


        <Button
            android:id="@+id/four"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:text="4"
            android:textSize="25dp"
            android:textColor="#000000"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_columnWeight="1">

        </Button>

        <Button
            android:id="@+id/five"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:text="5"
            android:textSize="25dp"
            android:textColor="#000000"
            android:layout_row="2"
            android:layout_column="1"
            android:layout_columnWeight="1">

        </Button>

        <Button
            android:id="@+id/six"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:text="6"
            android:textSize="25dp"
            android:textColor="#000000"
            android:layout_row="2"
            android:layout_column="2"
            android:layout_columnWeight="1">

        </Button>

        <Button
            android:id="@+id/neg"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:text="-"
            android:textSize="25dp"
            android:textColor="#000000"
            android:layout_row="2"
            android:layout_column="3"
            android:layout_columnWeight="1">

        </Button>

        <Button
            android:id="@+id/one"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:text="1"
            android:textSize="25dp"
            android:textColor="#000000"
            android:layout_row="3"
            android:layout_column="0"
            android:layout_columnWeight="1">

        </Button>

        <Button
            android:id="@+id/two"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_row="3"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:text="2"
            android:textColor="#000000"
            android:textSize="25dp">

        </Button>

        <Button
            android:id="@+id/three"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:text="3"
            android:textSize="25dp"
            android:textColor="#000000"
            android:layout_row="3"
            android:layout_column="2"
            android:layout_columnWeight="1">

        </Button>

        <Button
            android:id="@+id/add"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:text="+"
            android:textSize="25dp"
            android:textColor="#000000"
            android:layout_row="3"
            android:layout_column="3"
            android:layout_columnWeight="1">

        </Button>

        <Button
            android:id="@+id/zero"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:text="0"
            android:textSize="25dp"
            android:textColor="#000000"
            android:layout_row="4"
            android:layout_column="0"
            android:layout_columnWeight="1">

        </Button>

        <Button
            android:id="@+id/dzero"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:text="00"
            android:textSize="25dp"
            android:textColor="#000000"
            android:layout_row="4"
            android:layout_column="1"
            android:layout_columnWeight="1">

        </Button>

        <Button
            android:id="@+id/dot"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:text="."
            android:textSize="25dp"
            android:textColor="#000000"
            android:layout_row="4"
            android:layout_column="2"
            android:layout_columnWeight="1">

        </Button>

        <Button
            android:id="@+id/equal"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:text="="
            android:textSize="25dp"
            android:textColor="#000000"
            android:layout_row="4"
            android:layout_column="3"
            android:layout_columnWeight="1">

        </Button>
    </GridLayout>


</RelativeLayout>